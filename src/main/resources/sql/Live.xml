<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="live.dao.LiveDao">

    <insert id="add" parameterType="live.model.Live">
        insert into lives (
          platform,
          anchor,
          url,
          img_url,
          num
        ) values (
          #{platform},
          #{anchor},
          #{url},
          #{imgUrl},
          #{num}
        )
    </insert>

    <select id="getLives" resultType="live.model.Live">
        select * from lives;
    </select>

</mapper>