<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="live.dao.LiveDao">

    <insert id="add" parameterType="Live" useGeneratedKeys="true">
        insert into lives (
          platform,
          anchor,
          url,
          img_url,
          num
        ) values (
          #{platform},
          #{anchor},
          #{url},
          #{imgUrl},
          #{num}
        )
    </insert>

    <select id="getLives" resultType="Live">
        select * from lives;
    </select>

    <select id="getById" resultType="Live" parameterType="int">
        select * from lives where id = #{id}
    </select>

    <update id="update" parameterType="Live">
        update lives
        set
          platform = #{platform},
          anchor = #{anchor},
          url = #{url},
          img_url = #{imgUrl},
          num = #{num}
        where id = #{id}
    </update>

</mapper>